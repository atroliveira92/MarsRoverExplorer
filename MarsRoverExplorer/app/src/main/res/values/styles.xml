<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="DatePicker" parent="@style/ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorAccent">@color/red</item>
        <item name="colorControlActivated">@color/dark_red</item>
        <item name="android:selectableItemBackgroundBorderless">@android:color/white</item>
        <item name="colorControlHighlight">#d50000</item>
    </style>

    <style name="MySeekBar" parent="Widget.AppCompat.SeekBar">
        <item name="android:progressBackgroundTint">#A5A5A5</item>
        <item name="android:progressTint">@color/red</item>
        <item name="android:colorControlActivated">#d50000</item>
    </style>

</resources>
